<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eztunes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" >
    </uses-permission>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/music_icon_1"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name=".ezsplash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ezequalizer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eztunes.EZEQUALIZER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VisualizerView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eztunes.VISUALIZERVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ezmenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eztunes.EZMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eztuner"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eztunes.EZTUNER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eztracks"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.eztunes.EZTRACKS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>